- if can? :edit, @event
  - content_for :navbar_tools do
    = link_to t('.edit-event'), edit_event_path(@event), class: "btn btn-xs btn-default"
    = button_tag "Quick-Edit", id: "edit-content", class: "btn btn-xs btn-default", data: {event: @event.id}

  - breadcrumb :event, @event

.row
  .col-md-6.col-md-offset-3
    .heading
      %h1
        = @event.title
        %small
          = @event.date.strftime("%Y-%m-%d")
    .editable-content
      = raw @event.content
