- if can? :edit, @event
  - content_for :navbar_tools do
    %li
      = link_to t('.edit_event'), edit_event_path(@event)

  - breadcrumb :event, @event

.row.editable
  .col-md-6.col-md-offset-3
    - if can? :edit, @event
      #quick-edit
        = button_tag t('helpers.quick_edit'), id: "edit-content", class: "btn btn-edit btn-default", data: {event: @event.id}
    .heading
      %h1
        = @event.title
        %small
          = @event.date.strftime("%Y-%m-%d")
    .editable-content
      = raw @event.content
