.panel.panel-primary
  .panel-heading
    %h2= t('.sign_in')
  .panel-body
    = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.email_field :email, autofocus: true, placeholder: t('.email'), hide_label: true, prepend: i('user')
      = f.password_field :password, placeholder: t('.password'), hide_label: true, prepend: i('lock')
      .row
        .col-xs-6
          - if devise_mapping.rememberable?
            = f.check_box :remember_me, checked: true, label: t('.remember_me')
        .col-xs-6
          = f.submit t('.sign_in'), class: 'btn btn-primary btn-signin'

.panel.panel-default
  %h4.text-primary= t('.forgot_password')
  = link_to t('.click_here'), new_password_path(resource_name)
  = t('.to_get_new_password')


