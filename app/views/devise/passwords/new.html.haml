.panel.panel-primary
  .panel-heading
    %h2= t('.forgot_password')
  .panel-body
    = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.email_field :email, autofocus: true, placeholder: t('.email'), hide_label: true, prepend: i('user'), required: true
      = f.submit t(".send_reset"), class: 'btn btn-primary pull-right'
