.panel.panel-primary
  .panel-heading
    %h2 Forgot your password?
  .panel-body
    = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.email_field :email, autofocus: true, placeholder: 'Email', hide_label: true, prepend: i('user'), required: true
      = f.submit "Send me reset password instructions", class: 'btn btn-primary pull-right'
