- if can? :edit, @page
  - content_for :navbar_tools do
    = navbar_item t('.edit_page'), users_path

  - breadcrumb :page, @page

.page-content.col-lg-10.col-lg-offset-1
  - if can? :edit, @page
    #quick-edit
      = button_tag "Quick-Edit", id: "edit-content", class: "btn btn-edit btn-default", data: {page: @page.permalink}
  .panel-heading
    %h1= @page.title
  %hr/
  .editable-content
    = @page.content.html_safe
