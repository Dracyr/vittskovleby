- breadcrumb :page, @page

- if can? :edit, @page
  .panel.panel-primary
    .panel-heading
      %h3
        Tools
    .panel-body
      = link_to "Edit page", edit_page_path(@page), class: "btn btn-default"
      = button_tag "Quick-Edit", id: "edit-content", class: "btn btn-default", data: {page: @page.permalink}
.page-content
  .panel.panel-default
    .panel-heading
      %h1= @page.title
    .panel-body
      .editable-content
        = @page.content.html_safe
