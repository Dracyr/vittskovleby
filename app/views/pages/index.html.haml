- content_for :navbar_tools do
  = link_to "Create new page", new_page_path, class: "btn btn-xs btn-primary"
  = link_to "Create new menu", new_menu_path, class: "btn btn-xs btn-primary"
  = link_to "save menu", '#', id: 'save-menu-order', class: "btn btn-xs btn-primary"

- breadcrumb :pages

.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h3
          Menus
      .panel-body
        .dd
          %ol.dd-list
            = render @menus
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h3
          Pages
      .panel-body
        %ol.unstyled-list
          - @orphan_pages.each do |page|
            %li
              = link_to page.title, page
              .pull-right
                = link_to edit_page_path(page) do
                  %i.glyphicon.glyphicon.glyphicon-edit
                = link_to page_path(page), method: :delete do
                  %i.glyphicon.glyphicon.glyphicon-trash
