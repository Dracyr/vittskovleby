.page-header
  %h1 Pages

.panel.panel-default
  .panel-heading
    Tools
  .panel-body
    = link_to "Create new page", new_page_path, class: "btn btn-primary"


.panel.panel-default
  .panel-heading
    Pages
  .panel-body
    .dd
      %ol.dd-list
        - @orphan_pages.each do |page|
          %li.dd-item{'data-id' => page.id}
            .dd-handle.dd3-handle
            .dd3-content
              = page.title
              = link_to 'Edit', edit_page_path(page)
              = link_to 'Delete', page_path(page), method: :delete
              = link_to 'Create child', new_page_path(parent_id: page)
            - if page.children.any?
              %ol.dd-list
                - page.children.each do |child|
                  %li.dd-item{'data-id' => child.id}
                    .dd-handle.dd3-handle
                    .dd3-content
                      = child.title
                      = link_to 'Edit', edit_page_path(child)
                      = link_to 'Delete', page_path(child), method: :delete


