.col-md-8.col-md-offset-2
  %h2
    = t('.documents')
    = link_to i(:plus), new_document_path, class: 'pull-right' if can? :create, Document
  %table.table.table-hover
    %thead
      %tr
        %th{colspan: "2"}
    %tbody
      - @documents.each do |document|
        %tr
          %td= link_to document.file_name, document
          - if can? :destroy, document
            %td= link_to i(:trash), document, method: :delete, data: { confirm: t('.delete_document') }
