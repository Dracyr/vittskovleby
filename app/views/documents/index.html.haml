.col-md-8.col-md-offset-2
  %h2
    = t('.documents')
    = link_to i(:plus), new_document_path, class: 'pull-right' if can? :create, Document

  %ul.list-unstyled
    - @documents.each do |year, documents|
      %h3= year
      - documents.each do |document|
        %li
          = link_to document
          = link_to i(:trash), document, method: :delete, class: 'pull-right', data: { confirm: t('.delete_document') } if can? :destroy, document

