<%= bootstrap_form_for @reservation, layout: :horizontal do |f| %>
  <%= f.error_summary %>

  <%= f.select :location_ids, Location.all.collect { |l| [l.name, l.id]}, {}, {multiple: true} %>
  <%= f.text_field :name %>
  <%= f.text_field :phone %>
  <%= f.text_field :email %>
  <%= f.text_field :start_time, class: 'datepicker' %>
  <%= f.text_field :duration %>
  <%= f.text_area :comment %>

  <%= f.submit %>
<% end %>
