.row
  .col-md-6.col-md-offset-3
    .heading
      %h1
        = t('.booked_locations')
        %small= @reservation.locations_to_s
    %h3= t('.date')
    %p= @reservation.date
    %h3= t('.name')
    %p= @reservation.name
    - if can? :edit, @reservation
      %h3= t('.approved')
      %p= @reservation.approved? ? t('helpers.yeah') : t('helpers.nope')
      %h3= t('.phone')
      %p= @reservation.phone
      %h3= t('.email')
      %p= @reservation.email
      %h3= t('.invoice_address')
      %p= @reservation.invoice_address
      %h3= t('.invoice_option')
      %p= Reservation.human_enum_name :invoice_option, @reservation.invoice_option
    %h3= t('.comment')
    %p= @reservation.comment


