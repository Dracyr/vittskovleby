#navbar-wrapper
  = render 'layouts/navbar'
.cover-wrapper
  .container-fluid
    .cover-text
      %p
        Vittskövle
.event-wrapper
  .container
    .row
      .col-xs-12
        %h3
          Händer i vittskövle
    .row
      = render @events
.info-wrapper
  .container-fluid
    .row
      .col-md-6.no-padding
        .img-slott
      .col-md-6.no-padding
        .info-text.editable
          - if can? :edit, Page
            #quick-edit
              = button_tag t('helpers.quick_edit'), id: "edit-content", class: "btn btn-edit btn-default"
          = editable_field :info_text
.sections-wrapper
  .container
    .standing-images.row
      .col-md-4.col-sm-6
        = image_tag 'https://placehold.it/350x450', class: 'img-responsive', size: '350x450'
        .image-text
          .image-title
            Byn
          .image-caption
      .col-md-4.col-sm-6
        = image_tag 'https://placehold.it/350x450', class: 'img-responsive', size: '350x450'
        .image-text
          .image-title
            Föreningarna
          .image-caption
      .col-md-4.col-sm-6
        = image_tag 'https://placehold.it/350x450', class: 'img-responsive', size: '350x450'
        .image-text
          .image-title
            Företagen
          .image-caption

.footer-wrapper
  .container
    .col-md-6.footer-map
      /.iframe{height: 400, width: 600, frameborder: 0, src: "https://www.google.com/maps/embed/v1/place?key=AIzaSyA3MipmvaT0HrrUsTLb07ZPkDz6j8gHPEQ&q=Vittskovle"}
      %iframe{height: 300, width:500, frameborder: 0, src: "https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d8957.279502831543!2d14.153956051650999!3d55.85711638330903!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTXCsDUxJzI2LjIiTiAxNMKwMDgnNDMuOCJF!5e0!3m2!1sen!2sse!4v1424715049508"}
    .col-md-6
      .footer-text.editable
        - if can? :edit, Page
          #quick-edit
            = button_tag t('helpers.quick_edit'), id: "edit-content", class: "btn btn-edit btn-default"
        = editable_field :contact_text

