- breadcrumb :edit_menu, @menu

.panel.panel-default
  .panel-heading
    %h3
      Menu form
  .panel-body
    = bootstrap_form_for @menu, html: { class: 'form-horizontal' } do |f|
      = f.text_field :title
      - if @menu.menu_type == "link"
        = f.text_field :link

      = f.submit "Save menu", class: "btn btn-primary pull-right"
